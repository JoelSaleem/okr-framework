model Objecive {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  objectives Objecive[]
  createdAt  DateTime
}

generator prisma_client {
  provider = "prisma-client-js"
}
